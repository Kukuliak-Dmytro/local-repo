{
    "name": "mongoose-restaurant",
    "version": "1.0.0",
    "description": "Mongoose Restaurant",
    "author": "Mongoose Restaurant",
    "license": "MIT",
    "scripts": {
        "start": "docker-compose up -d --build",
        "remove": "docker-compose down --rmi all",
        "stop": "docker-compose down",
        "restart": "docker-compose down && docker-compose up -d --build",
        "build": "docker-compose build",
        "rebuild": "npm run remove && npm run start"
    }
}