{
  "name": "mongoose-restaurant",
  "version": "1.0.0",
  "description": "A TypeScript Express restaurant app",
  "main": "dist/app.ts",
  "scripts": {
    "build": "tsc",
    "start": "node dist/app.js",
    "dev": "nodemon app.ts",
    "lint": "eslint .",
    "watch": "nodemon --watch app.ts",
    "docker:build": "docker build -t backend .",
    "docker:rebuild": "docker stop backend 2>nul || echo Container not running && docker rm backend 2>nul || echo Container not found && docker build -t backend .",
    "docker:run": "docker run -d -p 3000:3000 --env-file .env --name backend backend",
    "docker:stop": "docker stop backend",
    "docker:remove": "docker rm backend"
  },
  "dependencies": {
    "axios": "^1.11.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "mongoose": "^8.17.0",
    "node-ts": "^8.0.6",
    "nodemon": "^3.1.10"
  },
  "devDependencies": {
    "@eslint/js": "^9.32.0",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "eslint": "^9.32.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.38.0"
  }
}
